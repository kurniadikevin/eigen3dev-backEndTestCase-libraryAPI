{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Library API",
      "description": "API for managing books and members in a library"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],

    "paths": {

      "/books": {
        "get": {
          "tags": [
            "books"
          ],
          "summary": "Get all books available",
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
                "type": "array",
                "example": 
                {
                    "code": "JK-45",
                    "title": "Harry Potter",
                    "author": "J.K Rowling",
                    "stock": 1
                }
              }
            }
          }
        },
        "post": {
          "tags": [
            "books"
          ],
          "summary": "Add a new book",
          "parameters": [
            {
              "in": "body",
              "name": "book",
              "description": "Book object that needs to be added",
              "required": true,
              "schema": {
                "$ref": "#/models/book.js"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
              
              }
            },
            "400": {
              "description": "Bad request"
            }
          }
        }
    },"/members" :{
        "get": {
            "tags": [
              "members"
            ],
            "summary": "Get all members",
            "responses": {
              "200": {
                "description": "Successful response",
                "schema": {
                  "type": "array",
                  "example": 
                  [
                    {
                        "code": "M001",
                        "name": "Angga"
                    },
                    {
                        "code": "M002",
                        "name": "Ferry"
                    },
                    {
                        "code": "M003",
                        "name": "Putri"
                    }
                ]
                }
              }
            }
          }

    }, "/borrow-book" : {
      "post" :{
        "tags": [
          "borrow-book"
        ],
        "summary": "Borrowing book to specific member",
        "parameters": [],
        "requestBody": {
          "description": "Input for member code and book code",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Member code",
                    "example": "M001"
                  },
                  "password": {
                    "type": "string",
                    "description": "Book code",
                    "example": "JK-45"
                  }
                }}}}},
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
            
            }
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
}
    
    
}
    